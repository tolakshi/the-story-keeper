@model IEnumerable<TheStoryKeeper.Models.Book>

@{
    ViewData["Title"] = "Shop All Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shop All Books</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAvailability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAvailability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.AutoId">Edit</a>
                <a class="btn btn-sm btn-outline-success" asp-action="Details" asp-route-id="@item.AutoId">Details</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.AutoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="mt-1">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>
